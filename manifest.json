{
	"manifest_version": 3,
	"name": "Figma Grid Overlay",
	"version": "1.0",
	"description": "Adds a configurable grid overlay similar to Figma's layout grid",
	"permissions": ["activeTab", "storage"],
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["styles.css"],
			"js": ["content.js"]
		}
	]
} 